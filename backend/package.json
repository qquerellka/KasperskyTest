{
  "name": "users-backend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy || prisma migrate dev --name init",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts --size=350",
    "backup": "tsx scripts/backup.ts --dir=./backup --format=jsonl",
    "restore": "tsx scripts/restore.ts --dir=./backup --format=jsonl --truncate"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "zod": "^3.23.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.7",
    "@types/node": "^22.7.6",
    "eslint": "^9.9.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "prisma": "^5.19.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}